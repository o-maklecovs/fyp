<main id="register">
    <h2>{{heading}}</h2>
    <form action="{{action}}" method="post">
        {{#if is_employer}}
        <label for="companyname">Company name</label>
        <input type="text" name="companyname" size="26">
        {{else}}
        <label for="firstname">First name</label>
        <input type="text" name="firstname" size="26">
        <label for="lastname">Last name</label>
        <input type="text" name="lastname" size="26">
        {{/if}}
        <label for="email">Email</label>
        <input type="text" name="email" size="26">
        <label for="password">Password</label>
        <input type="password" name="password" size="26">
        <label for="confirmpassword">Confirm password</label>
        <input type="password" name="confirmpassword" size="26">
        <input type="submit" value="Register">
    </form>
</main>